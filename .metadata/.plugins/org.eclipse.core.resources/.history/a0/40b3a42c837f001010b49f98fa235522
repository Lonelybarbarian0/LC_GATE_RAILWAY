void Boom_status_update()
{
	//BOOM1 UP/DOWN - Status
	if( (HAL_GPIO_ReadPin(BOOM1_LS1_GPIO_Port, BOOM1_LS1_Pin) == GPIO_PIN_SET) &&
	    (HAL_GPIO_ReadPin(BOOM1_LS2_GPIO_Port, BOOM1_LS2_Pin) == GPIO_PIN_SET) ){

	}
}
